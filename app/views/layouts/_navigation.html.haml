.navbar.navbar-default.navbar-static-top
  .container
    %button.navbar-toggle{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse", :type => "button"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand{:href => "#"} FinanceTrackerApp
    - if current_user
      .navbar-collapse.collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav
          %li= link_to "My Portfolio", my_portfolio_path
          %li= link_to "My Profile", edit_registration_path(current_user)
          %li= link_to "My Friends", my_friends_path(current_user)
        %ul.nav.navbar-nav.navbar-right.col-md-4
          %li.col-md-8.user-name.text-right
            %i.fa.fa-user
              = current_user.full_name.present? ? current_user.full_name : current_user.email
          %li.col-md-4.logout
            = link_to "Logout", destroy_user_session_path, class: "btn btn-xs btn-danger", method: :delete
